[Example

CREATE TABLE master AS SELECT id FROM default.dual LATERAL VIEW explode(split('1,2', ',')) s AS id;
CREATE TABLE detail(id int, str string) STORED AS ORC TBLPROPERTIES("orc.compress"="SNAPPY");
INSERT INTO TABLE detail SELECT 1 AS id, str FROM default.dual LATERAL VIEW explode(split(',', ',')) s AS str;

Values is empty
SELECT
d.*,
(CASE WHEN d.str IS NULL THEN 'IS_NULL'
WHEN d.str = '' THEN 'IS_EMPTY'
ELSE 'NOT_EMPTY'
END) value_type
FROM detail d;
d.id    d.str   value_type
1               IS_EMPTY
1               IS_EMPTY

Value is NULL instead of an empty values
SELECT
d.*,
(CASE WHEN d.str IS NULL THEN 'IS_NULL'
WHEN d.str = '' THEN 'IS_EMPTY'
ELSE 'NOT_EMPTY'
END) value_type
FROM detail d
JOIN master m ON m.id = d.id;
d.id    d.str   value_type
1       NULL    IS_NULL
1       NULL    IS_NULL

