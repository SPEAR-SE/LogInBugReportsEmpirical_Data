 conf.setOutputKeyClass(Text.class);\n    conf.setOutputValueClass(IntWritable.class);\n    conf.setMapperClass(WordCount.MapClass.class);\n    conf.setBoolean(\"mapred.mapper.new-api\", false);\n    conf.setNumMapTasks(3);\n    conf.setNumReduceTasks(0);\n    conf.setInt(JobContext.IO_SORT_FACTOR, 2);\n    removeWordsFile(inFiles[4], conf);\n    FileInputFormat.setInputPaths(conf, IN_DIR);\n    FileOutputFormat\n        .setOutputPath(conf, new Path(OUT_DIR, \"output_oldcounter\"));\n\n    RunningJob myJob = JobClient.runJob(conf);\n    Counters c1 = myJob.getCounters();\n    Counter findCounter = c1.findCounter(TaskCounter.MAP_OUTPUT_BYTES);\n    System.out.println(\"findCounter   :  \" + findCounter);\n\n    Assert.assertTrue(\"MAP_OUTPUT_BYTES is not populated\",\n        findCounter.getValue() > 0);\n  }\n{code}","updateAuthor":{"self":"https://issues.apache.org/jira/rest/api/2/user?username=nijel","name":"nijel","key":"nijel","avatarUrls":{"48x48":"https://issues.apache.org/jira/secure/useravatar?avatarId=10452","24x24":"https://issues.apache.org/jira/secure/useravatar?size=small&avatarId=10452","16x16":"https://issues.apache.org/jira/secure/useravatar?size=xsmall&avatarId=10452","32x32":"https://issues.apache.org/jira/secure/useravatar?size=medium&avatarId=10452"},"displayName":"nijel","active":true,"timeZone":"Etc/UTC"},"created":"2015-10-10T05:38:43.609+0000","updated":"2015-10-10T05:38:43.609+0000"}],"maxResults":4,"total":4,"startAt":0},"votes":{"self":"https://issues.apache.org/jira/rest/api/2/issue/MAPREDUCE-6487/votes","votes":0,"hasVoted":false},"worklog":{"startAt":0,"maxResults":20,"total":0,"worklogs":[]},"customfield_12311820":"0|i2ld8n:"}}